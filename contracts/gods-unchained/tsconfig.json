{
    "compilerOptions": {
      "target": "es5",      
      "module": "commonjs",
      "lib": ["es2015", "es2016", "es2017", "dom"],
      "strict": false,
      "sourceMap": true,
      "noUnusedLocals": false,
      "declaration": true,
      "outDir": "dist",
      "preserveSymlinks": true,
      "esModuleInterop": true
    },
    "include": [
      "src",
      "__tests__",
      "deployment"
    ],
    "compileOnSave": true
  }