{
  "name": "@imtbl/contracts",
  "version": "1.0.0",
  "description": "Solidity smart contracts for Gods Unchained.",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf build; rm -rf transpiled; rm -rf ../types/src/generated; rm -rf ../artifacts/src",
    "chain": "ganache-cli --networkId 50 --accounts 20 -l 19000000 -e 10000000000 -m 'concert load couple harbor equip island argue ramp clarify fence smart topic'",
    "chain-legacy": "yarn etherlime ganache --gasLimit=15000000",
    "lint:sol": "yarn solhint \"contracts/**/*.sol\" --config solhint.json",
    "lint:ts": "tslint -t verbose '__tests__/**/*.ts'",
    "lint": "yarn lint:ts && yarn lint:sol",
    "generate-typings": "node scripts/generate-typings.js",
    "compile": "yarn lint:sol && yarn truffle compile --all && yarn generate-typings",
    "setup": "yarn clean && yarn compile && yarn generate-typings",
    "test-legacy": "yarn etherlime test --solcVersion=0.5.11 --output=none --timeout=10000 --runs=200",
    "test": "yarn setup && yarn reset-test-evm && yarn jest __tests__/core --runInBand",
    "test:watch": "yarn reset-test-evm && yarn jest __tests__/core --runInBand --watch",
    "reset-test-evm": "node scripts/reset-test-evm.js"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@0x/contracts-exchange-libs": "^3.0.8",
    "@imtbl/test-utils": "^1.0.0",
    "@imtbl/types": "^1.0.0",
    "@openzeppelin/contracts": "^2.3.0",
    "dotenv": "^8.2.0",
    "ethers": "^4.0.39",
    "fs-readdir-recursive": "^1.1.0",
    "mustache": "^3.1.0",
    "openzeppelin-solidity": "^2.3.0",
    "recursive-readdir": "^2.2.2",
    "truffle-flattener": "^1.4.2",
    "typescript": "^3.6.4"
  },
  "devDependencies": {
    "@0xproject/types": "^1.1.4",
    "@types/jest": "^24.0.21",
    "@types/node": "^12.12.3",
    "etherlime": "^2.2.4",
    "etherlime-lib": "^1.1.5",
    "ganache-cli": "^6.7.0",
    "jest": "^24.9.0",
    "replace-in-file": "^4.2.0",
    "solhint": "^2.3.0",
    "truffle": "^5.0.42",
    "ts-generator": "^0.0.8",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typechain": "^0.3.19"
  }
}
