{
    "compilerOptions": {
      "target": "es5",
      "baseUrl": "./src",
      "module": "commonjs",
      "lib": ["es2015", "es2016", "es2017", "dom"],
      "strict": false,
      "sourceMap": true,
      "noUnusedLocals": false,
      "declaration": true,
      "outDir": "dist",
      "esModuleInterop": true,
      "preserveSymlinks": true      
    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules"
    ],
    "compileOnSave": true
  }